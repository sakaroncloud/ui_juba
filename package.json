{
  "name": "turbo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "frontend": "turbo dev --filter=frontend --filter=api",
    "cms": "turbo dev --filter=cms --filter=api",
    "api": "turbo dev --filter=api",
    "lint": "turbo lint",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}